<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.mikecioffi.test.SecondPage"
        android:id="@+id/barspage">

        <View android:id="@+id/fakeView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bars Nearby"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="32dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:textColor="#00ECFC"

            android:text="Kams"
            android:id="@+id/kams"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:textColor="#00ECFC"

            android:text="Joes"
            android:id="@+id/joes"
            android:layout_below="@+id/redlion"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:textColor="#00ECFC"

            android:text="Clys"
            android:id="@+id/clys"
            android:layout_below="@+id/joes"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:id="@+id/food_order_back"
            android:textColor="#ffffff"

            android:scaleType="fitXY"
            android:layout_alignBaseline="@+id/firehaus"
            android:layout_alignBottom="@+id/firehaus"
            android:layout_toRightOf="@+id/button5"
            android:layout_toEndOf="@+id/button5" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Red Lion"
            android:id="@+id/redlion"
            android:textColor="#00ECFC"

            android:scaleType="fitXY"
            android:layout_below="@+id/kams"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="Brothers"
            android:id="@+id/brothers"
            android:textColor="#00ECFC"

            android:scaleType="fitXY"
            android:layout_below="@+id/food_order_back"
            android:layout_alignLeft="@+id/food_order_back"
            android:layout_alignStart="@+id/food_order_back" />


        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:textColor="#00ECFC"

            android:text="Murphys"
            android:id="@+id/button4"
            android:scaleType="fitXY"
            android:layout_below="@+id/brothers"
            android:layout_toRightOf="@+id/clys"
            android:layout_toEndOf="@+id/clys" />


        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:textColor="#00ECFC"

            android:text="White Horse"
            android:id="@+id/button5"
            android:scaleType="fitXY"
            android:layout_below="@+id/clys"
            android:layout_alignLeft="@+id/fakeView"
            android:layout_alignStart="@+id/fakeView"
            android:layout_toLeftOf="@+id/fakeView"
            android:layout_toStartOf="@+id/fakeView" />


        <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:textColor="#00ECFC"

            android:text="Firehaus"
            android:id="@+id/firehaus"
            android:layout_below="@+id/clys"
            android:layout_toRightOf="@+id/button5"
            android:layout_toEndOf="@+id/button5" />

        <View
            android:background="#00ECFC"

            android:layout_width="fill_parent"
            android:layout_height="10px"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/view" />


        <View
            android:background="#00ECFC"

            android:layout_width="wrap_content"
            android:layout_height="5px"

            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:id="@+id/view2" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/logout"
            android:layout_alignTop="@+id/button4"
            android:layout_toLeftOf="@+id/button4"
            android:layout_toStartOf="@+id/button4" />


    </RelativeLayout>
</ScrollView>